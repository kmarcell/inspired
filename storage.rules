rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // 1. User Avatars
    match /avatars/{userId}/{allPaths=**} {
      // Anyone can read avatars
      allow read: if true;
      // Only the owner can upload or delete their own avatars
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 2. Yoga Studio Media
    match /studios/{studioId}/{allPaths=**} {
      // Anyone can read studio media
      allow read: if true;
      // Only authenticated users (future: studio owners) can write
      allow write: if request.auth != null;
    }
  }
}
