# fastlane/Fastfile

default_platform(:ios)

platform :ios do
  desc "Verify that Firebase Emulators are running"
  private_lane :verify_emulators do
    begin
      sh("curl -f http://localhost:4000")
    rescue
      UI.user_error!("‚ùå Firebase Emulators are not running! Please run 'firebase emulators:start' in a separate terminal before running tests.")
    end
  end

  desc "Seed the local emulator with initial data"
  lane :seed_emulator do
    UI.message("üå± Seeding local emulator...")
    sh("cd ../../../.. && node infrastructure/scripts/seeder.js local")
  end

  desc "Run all unit and snapshot tests (Local Emulator)"
  lane :test do |options|
    # Increase timeout for slow showBuildSettings calls
    ENV["FASTLANE_XCODEBUILD_SETTINGS_TIMEOUT"] = "120"

    # 0. Load Local Secrets
    Dotenv.load "../../../../.env"
    UI.message("üß™ Fastlane: TEST_USER_PASSWORD is set: #{!ENV['TEST_USER_PASSWORD'].nil?}")

    # 1. Pre-test Automation
    sh("cd ../../../.. && ./scripts/sync-strings.sh")
    sh("cd ../../../.. && ./scripts/generate-assets.sh")

    # 2. Emulator Verification (Critical for UI Tests)
    verify_emulators

    # 3. Optional/Automatic Seeding
    if options[:reseed]
      seed_emulator
    end

    # 4. Execution
    scan(
      scheme: "Inspired (Local)",
      configuration: "Debug (Local)",
      derived_data_path: "./build",
      xcargs: "-skipMacroValidation"
    )
  end

  desc "Deploy a new version to Firebase App Distribution (Staging)"
  lane :deploy_staging do
    sh("../../../scripts/fetch-config.sh staging")
    sh("xcodegen generate")

    build_app(
      scheme: "Inspired (Staging)",
      configuration: "Release (Staging)",
      export_method: "ad-hoc"
    )

    firebase_app_distribution(
      app: "1:99296584767:ios:some_app_id",
      groups: "staging-testers"
            )
          end
    
    desc "Analyze Accessibility (Generate Hierarchy & Screenshots)"
    lane :analyze_accessibility do
      sh("mkdir -p ../../../../Accessibility")
      sh("rm -f ../../../../Accessibility/*")
      scan(
        scheme: "Inspired (Local)",
        configuration: "Debug (Local)",
        only_testing: "InspiredUITests/LoginUITests/testLoginScreenVoiceOver",
        xcargs: "-skipMacroValidation"
      )
      # Read the generated hierarchy files for AI analysis
      sh("cat ../../../../Accessibility/*.txt")
    end
          
      desc "Deploy a new version to TestFlight (Production)"
  lane :deploy_prod do
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true
    )

    sh("../../../scripts/fetch-config.sh prod")
    sh("xcodegen generate")

    build_app(
      scheme: "Inspired (Production)",
      configuration: "Release (Production)",
      export_method: "app-store"
    )

    upload_to_testflight(api_key: api_key)
  end
end
