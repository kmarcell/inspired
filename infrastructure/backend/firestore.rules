rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the requester is the owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // 1. User Profiles
    match /users/{userId} {
      // Full read for the owner
      allow read: if isOwner(userId);
      
      // Restricted read for others: Only if the profile is public
      allow get: if request.auth != null && resource.data.privacySettings.isProfilePublic == true;
      
      // Full write for the owner BUT enforced by constraints
      allow write: if isOwner(userId) && 
        (request.resource.data.privacySettings.isProfilePublic == false || 
         request.resource.data.privacySettings.avatarPrivacy == "public");
    }
    
    // 2. Yoga Studios
    match /studios/{studioId} {
      allow read: if true;
      allow write: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }
    
    // 3. Community Posts
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.author.id == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.author.id == request.auth.uid;
    }
    
    // 4. Comments (Sub-collection)
    match /posts/{postId}/comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.author.id == request.auth.uid;
    }
    
    // 5. Likes (Sub-collection)
    match /posts/{postId}/likes/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
