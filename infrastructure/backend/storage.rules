rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // 1. User Avatars
    match /avatars/{userId}/{allPaths=**} {
      // Access controlled by the author's privacy settings in Firestore
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        firestore.get(/databases/(default)/documents/users/$(userId)).data.privacySettings.avatarPrivacy == 'public' ||
        (firestore.get(/databases/(default)/documents/users/$(userId)).data.privacySettings.avatarPrivacy == 'groups-only' &&
         firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.joinedCommunities.hasAny(
           firestore.get(/databases/(default)/documents/users/$(userId)).data.joinedCommunities
         ))
      );
      
      // Only the owner can upload or delete their own avatars
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 2. Yoga Studio Media
    match /studios/{studioId}/{allPaths=**} {
      // Anyone can read studio media
      allow read: if true;
      // Only the studio owner (future: verified by Firestore) can write
      // For now, allow any authenticated user for initial seeding/testing
      allow write: if request.auth != null;
    }
  }
}
